{
  "name": "classroom-management-system",
  "productName": "Classroom Management System",
  "description": "نظام إدارة الفصول الدراسية - تتبع الحضور والتقييم والمناهج",
  "author": "Nabil Bach <nabilbach@example.com>",
  "private": true,
  "version": "2.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --port 4201",
    "electron:dev": "concurrently \"vite --port 4201\" \"wait-on http://localhost:4201 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "dev:backend": "cd backend && node index.dev.js",
    "dev:frontend": "vite --port 4201 --mode development",
    "prod:backend": "cd backend && node index.js",
    "prod:frontend": "vite --port 4200 --mode production",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:backend": "jest backend/tests",
    "test:frontend": "jest src",
    "backup:start": "node automated_backup_service.cjs start",
    "backup:immediate": "node automated_backup_service.cjs backup",
    "backup:status": "node automated_backup_service.cjs status",
    "backup:cleanup": "node automated_backup_service.cjs cleanup",
    "monitor:check": "node system_monitor.cjs",
    "monitor:stats": "node system_monitor.cjs",
    "services:start": "npm run backup:start & npm run monitor:start",
    "services:status": "npm run backup:status && npm run monitor:stats",
    "system:health": "npm run monitor:check",
    "system:full-check": "npm run monitor:backup && npm run monitor:data && npm run monitor:check"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@heroicons/react": "2.0.18",
    "@material-tailwind/react": "2.1.4",
    "@mui/icons-material": "^5.18.0",
    "@mui/material": "^5.18.0",
    "@mui/x-date-pickers": "^7.22.2",
    "@types/react-datepicker": "^6.2.0",
    "@types/winston": "^2.4.4",
    "apexcharts": "3.44.0",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.525.0",
    "morgan": "^1.10.1",
    "notistack": "^3.0.2",
    "prop-types": "15.8.1",
    "react": "^18.2.0",
    "react-apexcharts": "1.4.1",
    "react-big-calendar": "^1.19.4",
    "react-datepicker": "^8.7.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.17.0",
    "react-to-print": "^3.1.1",
    "recharts": "^3.2.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "10.4.16",
    "baseline-browser-mapping": "^2.8.10",
    "caniuse-lite": "^1.0.30001746",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^38.3.0",
    "electron-builder": "^24.6.0",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.6",
    "rollup": "^3.29.5",
    "sequelize-cli": "^6.6.0",
    "tailwindcss": "3.3.4",
    "tw-animate-css": "^1.3.5",
    "vite": "^7.1.10",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.nabilbach.classroom-management",
    "productName": "Classroom Management System",
    "copyright": "Copyright © 2025 ${author}",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "classroom.db",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "classroom.db",
        "to": "classroom.db"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "نظام إدارة الفصول",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false,
      "license": "LICENSE.txt",
      "language": "1025"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons",
      "category": "Education",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.education",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
